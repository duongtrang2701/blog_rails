<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title)%> | Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--Navbar-->
    <div class="row" id="banner">
      <nav class="navbar navbar-expand-lg navbar-light" id="header">
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-item nav-link active" href= "/page/home"><button type="button" class="btn btn-info">Home</button><span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="/page/about"><button type="button" class="btn btn-info">About</button></a>
            <a class="nav-item nav-link" href="/page/contact"><button type="button" class="btn btn-info">Contact</button></a>
          </div>
        </div>
      </nav>
    </div>
    <div class="container <%= controller_name %> <%= action_name %>">
      <%= yield %>
    </div>
  </body>
</html>
