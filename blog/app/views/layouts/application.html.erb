<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title)%> | Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--Navbar-->
    <div class="row" id="banner">
      <nav class="navbar navbar-expand-lg navbar-light" id="header">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-item nav-link active" href= "/page/home"><button type="button" class="btn btn-light">Home</button><span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="/page/about"><button type="button" class="btn btn-light">About</button></a>
            <a class="nav-item nav-link " href="/user_contacts/new"><button type="button" class="btn btn-light">Contact</button></a>
          </div>
        </div>
      </nav>
    </div>
    <div id="columns">
      <div id="side">
        <% if session[:user_id] %>
          <ul>
            <li><%= link_to 'Posts', posts_path,class: "btn btn-info" %></li><br>
            <li><%= link_to 'Users',  users_path, class: "btn btn-info" %></li>
          </ul>
          <%= button_to 'Logout', logout_path, method: :delete, class: "btn btn-info" %>
        <%else%>
          <%= button_to 'Login', login_path, class: "btn btn-info" %>
        <% end %>
      </div>
      <div  id ="main" class="container <%= controller_name %> <%= action_name %>">
        <%= yield %>
      </div>
      
    </div>
    

  </body>
</html>
