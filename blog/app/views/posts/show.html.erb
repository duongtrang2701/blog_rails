<% provide(:page_title, @post.title) %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= @post.image %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>
<section>
  <div class="container">

    <h2 class="subtitle 5"><strong><%= @post.comments.count%></strong> Comments
      <strong><%= @post.impressionist_count%></strong> Views
    </h2>
    <%= render @post.comments%>
    <div class="comment-form">
      <hr />
	 		<%= render 'comments/form' %>
		</div>

  </div>
</section>

