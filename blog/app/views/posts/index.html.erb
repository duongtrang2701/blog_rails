<% provide(:page_title, '_All Post_') %>

<p id="notice"><%= notice %></p>
<%= link_to 'New Post', new_post_path, class: "btn btn-effect-ripple btn-sm btn-success"%>

<div class="row">
<% @posts.each do |post| %>
  <div class="card" style="width: 18rem;">
    <div class="flip-card">
      <div class="flip-card-inner">
        <div class="flip-card-front">
          <% if post.image.attached?%>
            <%= image_tag(post.image, class: 'list_image')%>
          <%else%>
            <img class="list_image" src="<%=image_path('no-image')%>">
          <%end%>
        </div>
        <div class="flip-card-back">
          <h5>Post title: <%= post.title%></h5> 
          <p>Updated at: <%= post.updated_at %></p> 
        </div>
      </div>
    </div>
    <p class="title"><%= post.title %></p>
    <div style="margin: 24px 0;">
      <a href="#"><i class="fa fa-dribbble"></i></a> 
      <a href="#"><i class="fa fa-twitter"></i></a>  
      <a href="#"><i class="fa fa-linkedin"></i></a>  
      <a href="#"><i class="fa fa-facebook"></i></a> 
    </div>

    <button>
      <%= link_to 'Edit', edit_post_path(post), class: "btn btn-effect-ripple btn-sm btn-success fa fa-pencil"%>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-effect-ripple btn-sm btn-danger fa fa-times"%>
      <%= link_to 'Show', post, class: "btn btn-effect-ripple btn-sm btn-info fa fa-eye"%>
    </button>
  </div>
  <% end %>
</div>

<nav>
  <ul class="pagination pg-teal">
    <li><%= will_paginate @posts, class: "page-link page-item"%></li>
  </ul>
</nav>