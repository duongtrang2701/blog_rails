      <%= form.label :image, 'Image'%>
      <%= form.file_field :image%> 
    </div>
    <div class="form-group col-xs-5 col-sm-6 col-lg-4">
      <%= form.label :description, 'Description'%>
      <%= form.text_area :description, class: "form-control",placeholder: "Enter description", required: :required %>
