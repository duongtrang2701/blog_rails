<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>

      <div class="form-group col-md-5">
        <%= label_tag :name, 'Username'%>
        <%= text_field_tag :name,  params[:name], class: "form-control", placeholder: "Enter username", required: :required %>
      </div>
      <div class="form-group col-md-5">
        <%= label_tag :password_field, 'Password'%>
        <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Enter password", required: :required %> 
      </div>
      <%=  submit_tag 'Login',  class: "btn btn-primary actions" %>

    </fieldset>
  <% end %>
</div